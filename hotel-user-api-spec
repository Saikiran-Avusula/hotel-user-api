openapi: 3.0.1
info:
  title: Hotel Search
  version: v1
  description: |
    The **Hotel Search API** enables management of users and hotels with simple RESTful operations.  
    With this API, you can:
    - Register and manage users  
    - Add and list available hotels  
    - Retrieve hotels for a specific user based on their city and pincode  
    - Authenticate users through login to fetch nearby hotels  

    It is designed as a foundation for hotel discovery and user-centric booking workflows.

servers:
  - url: http://localhost:8080
    description: Local server

tags:
  - name: UserController
    description: Operations related to user management
  - name: HotelController
    description: Operations related to hotel management

paths:
  /users/adduser:
    post:
      tags:
        - UserController
      summary: Register a new user
      description: Creates a new user profile with basic details like name, address, city, and pincode.
      operationId: createUser
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/User'
      responses:
        '201':
          description: User successfully created
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/User'
        '400':
          description: Invalid input data provided
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
        '500':
          description: Internal server error while creating user
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'

  /users/allusers:
    get:
      tags:
        - UserController
      summary: Retrieve all registered users
      description: Fetches a complete list of users stored in the system.
      operationId: getAllUsers
      responses:
        '200':
          description: Successfully retrieved list of users
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/User'
        '404':
          description: No users found in the system
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'

  /users/userhotels/{userId}:
    get:
      tags:
        - UserController
      summary: Retrieve hotels for a specific user
      description: Fetches hotels based on the user's registered city and pincode.
      operationId: getHotelsByUserId
      parameters:
        - name: userId
          in: path
          required: true
          description: Unique identifier of the user
          schema:
            type: integer
            format: int64
      responses:
        '200':
          description: Successfully retrieved hotels for the user
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Hotel'
        '404':
          description: No hotels found for the given user location
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
        '400':
          description: Invalid user ID format
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'

  /users/login:
    post:
      tags:
        - UserController
      summary: Authenticate a user
      description: Validates username and password. On success, returns a list of hotels available in the user’s location.
      operationId: loginUser
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              required:
                - userName
                - userPassword
              properties:
                userName:
                  type: string
                  description: The username of the registered user
                userPassword:
                  type: string
                  description: The password of the registered user
      responses:
        '200':
          description: Successfully authenticated, hotels returned
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Hotel'
        '401':
          description: Unauthorized – invalid credentials
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
        '400':
          description: Missing or invalid login request data
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'

  /hotels/addhotel:
    post:
      tags:
        - HotelController
      summary: Register a new hotel
      description: Creates a new hotel entry with details such as name, address, city, pincode, and coordinates.
      operationId: createHotel
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Hotel'
      responses:
        '201':
          description: Hotel successfully created
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Hotel'
        '400':
          description: Invalid hotel input data
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
        '500':
          description: Internal server error while creating hotel
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'

  /hotels/allhotels:
    get:
      tags:
        - HotelController
      summary: Retrieve all hotels
      description: Fetches a complete list of hotels stored in the system.
      operationId: getAllHotels
      responses:
        '200':
          description: Successfully retrieved list of hotels
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Hotel'
        '404':
          description: No hotels found in the system
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'

components:
  schemas:
    User:
      type: object
      properties:
        id:
          type: integer
          format: int64
        name:
          type: string
        address:
          type: string
        city:
          type: string
        pincode:
          type: string

    Hotel:
      type: object
      properties:
        id:
          type: integer
          format: int64
        name:
          type: string
        address:
          type: string
        locality:
          type: string
        city:
          type: string
        pincode:
          type: string
        latitude:
          type: number
          format: double
        longitude:
          type: number
          format: double

    ErrorResponse:
      type: object
      properties:
        timestamp:
          type: string
          format: date-time
        status:
          type: integer
        error:
          type: string
        message:
          type: string
        path:
          type: string          application/json:
            schema:
              $ref: '#/components/schemas/Hotel'
      responses:
        '201':
          description: Hotel created successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Hotel'
        '500':
          description: Internal server error
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
  /hotels/allhotels:
    get:
      tags:
        - HotelController
      summary: Get all hotels
      operationId: getAllHotels
      responses:
        '200':
          description: List of hotels
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Hotel'
        '404':
          description: No hotels found
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'

components:
  schemas:
    User:
      type: object
      properties:
        id:
          type: integer
          format: int64
        name:
          type: string
        address:
          type: string
        city:
          type: string
        pincode:
          type: string

    Hotel:
      type: object
      properties:
        id:
          type: integer
          format: int64
        name:
          type: string
        address:
          type: string
        locality:
          type: string
        city:
          type: string
        pincode:
          type: string
        latitude:
          type: number
          format: double
        longitude:
          type: number
          format: double

    ErrorResponse:
      type: object
      properties:
        timestamp:
          type: string
          format: date-time
        status:
          type: integer
        error:
          type: string
        message:
          type: string
        path:
          type: string
